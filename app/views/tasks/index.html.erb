<h1>My tasks</h1>
<ul style="list-style-type: none">
<% @tasks.each do |task| %>
<li>
    <% if task.completed %>
      <input type='checkbox' checked>
    <% else %>
      <input type='checkbox'>
    <% end %>
    <%= link_to task.title, task_path(task) %> 
    <%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
</li>
<% end %>
</ul>
<%= link_to "Add a new task", new_task_path %>